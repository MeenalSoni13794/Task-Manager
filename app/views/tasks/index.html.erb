<h1>Task List</h1>

<% if Task.feature_enabled?(:new_task_feature) %>
  <p style="color: green; font-weight: bold;">New Task Feature is ENABLED ✅</p>
<% else %>
  <p style="color: red; font-weight: bold;">New Task Feature is DISABLED ❌</p>
<% end %>

<ul>
  <% @tasks.each do |task| %>
    <li><strong><%= task.title %></strong> - <%= task.description %></li>
  <% end %>
</ul>
